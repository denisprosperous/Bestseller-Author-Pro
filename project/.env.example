# =============================================================================
# BESTSELLER AUTHOR PRO - ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control - it contains sensitive information
# =============================================================================

# üóÑÔ∏è DATABASE CONFIGURATION (REQUIRED)
# =============================================================================
# Get these from your Supabase project dashboard
# Note: Vite requires VITE_ prefix for browser-accessible variables
SUPABASE_PROJECT_URL=https://your-project-id.supabase.co
VITE_SUPABASE_PROJECT_URL=https://your-project-id.supabase.co

SUPABASE_API_KEY=your-anon-public-key-here
VITE_SUPABASE_API_KEY=your-anon-public-key-here

# Service role key (server-side only, DO NOT expose to browser)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Generate a secure 64-character hex string for API key encryption
# Use: openssl rand -hex 32
ENCRYPTION_KEY=your-64-character-hex-encryption-key-here

# =============================================================================
# ü§ñ AI PROVIDER API KEYS (CORE FUNCTIONALITY)
# =============================================================================
# OPTION 1: Store keys in database (RECOMMENDED for production)
# - Add your API keys through the Settings page in the app
# - Keys are encrypted with AES-256-CBC and stored in Supabase
# - This is the default and most secure method

# OPTION 2: Use environment variables (DEVELOPMENT ONLY)
# - Set VITE_USE_DEV_API_KEYS=true to enable this mode
# - Add your API keys below with VITE_ prefix
# - Keys are read directly from environment (NOT encrypted)
# - DO NOT use this in production!

# Enable development mode API keys (set to 'true' to use env vars)
VITE_USE_DEV_API_KEYS=false

# Development Mode API Keys (only used if VITE_USE_DEV_API_KEYS=true)
VITE_OPENAI_API_KEY=sk-your-openai-key-here
VITE_ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
VITE_GOOGLE_API_KEY=your-google-ai-api-key-here
VITE_XAI_API_KEY=xai-your-xai-key-here
VITE_DEEPSEEK_API_KEY=hf_your-huggingface-token-here

# Text Generation Providers (at least one required)
XAI_API_KEY=your-xai-api-key-here
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# Image Generation Providers (for children's books)
HUGGINGFACE_API_KEY=your-huggingface-api-key-here
EDEN_AI_API_KEY=your-eden-ai-api-key-here
GOOGLE_CLOUD_ACCESS_TOKEN=your-google-cloud-access-token-here
GOOGLE_CLOUD_PROJECT_ID=your-google-cloud-project-id

# Voice/TTS Providers (for audiobooks)
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here
OPENAI_API_TTS_KEY=your-openai-api-key-here
GOOGLE_CLOUD_TTS_API_KEY=your-google-cloud-tts-api-key-here

# =============================================================================
# üåê APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000
# FRONTEND_URL=http://localhost:5173

# =============================================================================
# üìä ANALYTICS & MONITORING (RECOMMENDED)
# =============================================================================
# Google Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Sentry for error tracking
SENTRY_DSN=https://your-sentry-dsn-here@sentry.io/project-id

# =============================================================================
# üí≥ PAYMENT PROCESSING (OPTIONAL)
# =============================================================================
# Stripe for premium features
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# =============================================================================
# üìß EMAIL & NOTIFICATIONS (RECOMMENDED)
# =============================================================================
# SendGrid for transactional emails
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# =============================================================================
# üîß FEATURE FLAGS & SETTINGS
# =============================================================================
# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_ERROR_TRACKING=true
ENABLE_BETA_FEATURES=false
ENABLE_DEBUG_MODE=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Content Generation Limits
MAX_EBOOK_LENGTH=50000
MAX_CHAPTERS_PER_BOOK=20
MAX_IMAGES_PER_BOOK=50

# =============================================================================
# üîê OAUTH & SOCIAL AUTH (OPTIONAL)
# =============================================================================
# Google OAuth for social login
GOOGLE_CLIENT_ID=your-google-client-id.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# =============================================================================
# üåç INTERNATIONALIZATION (OPTIONAL)
# =============================================================================
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,it,pt

# =============================================================================
# üîÑ MCP & SPECIAL INTEGRATIONS
# =============================================================================
# MCP OAuth Tokens (if using MCP integrations)
MCP_OAUTH_TOKENS_SUPABASE=your-mcp-oauth-token-here